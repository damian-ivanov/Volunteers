@model AllProjectsQueryModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="col-sm-12 offset-lg-1 col-lg-10 col-xl-10">
    <div class="row ml-auto mr-auto mt-4">
        <div class="col-md-4" style="background-color: #5133AB">
            <div class="tiles">
                <h2 class="title">@ViewBag.UsersCount</h2>
                <p>Registered users</p>
            </div>
        </div>
        <div class="col-md-4" style="background-color: #00A600">
            <div class="tiles">
                <h2 class="title">@ViewBag.ProjectsCount</h2>
                <p>Projects completed</p>
            </div>
        </div>
        <div class="col-md-4" style="background-color: #DC572E">
            <div class="tiles">
                <h2 class="title">@ViewBag.TownsCount</h2>
                <p>Towns improved</p>
            </div>
        </div>
    </div>

    <br />

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4" style="text-align: center;">Find projects in your area:</h1>
            <p class="lead" style="text-align: center;">Volunteer in various projects to help make your community better!</p>
            <hr class="my-4">
            <form method="get">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="SearchTerm"></label>
                        <input asp-for="SearchTerm" class="form-control" placeholder="type your location...">
                    </div>
                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label asp-for="Category"></label>
                            <select asp-for="Category" class="form-control">
                                <option value="">All</option>

                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Name">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label asp-for="SortOrder"></label>
                            <select asp-for="SortOrder" class="form-control">
                                <option value="Newest" selected>Newest</option>
                                <option value="Oldest">Oldest</option>
                                <option value="Starting Soon">Starting Soon</option>
                                <option value="Most participants">Most participants</option>
                            </select>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" asp-for="ShowCompleted" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                Show completed projects too
                            </label>
                            <button type="submit" class="btn btn-primary" style="float: right; margin-top: 10px;">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
            <div id="mapid"></div>
        </div>
    </div>
    <br />



    @if (Model.TotalProjects == 0)
    {
        <h1 style="text-align:center">Sorry, no projects found by selected criteria :(</h1>
    }

    @if (Model.TotalProjects > 0)
    {
        <h1 style="text-align:center">@Model.TotalProjects projects found:</h1>
        <hr />
        <br />
        var count = 0;
        @foreach (var project in Model.Projects)
        {


            @if (count == 0)
            {
                @: <div class="card-deck">
                }

            <div class="card" onclick="document.getElementById('detailsButton').click()" style="cursor:pointer">
                @if (!project.IsCompleted)
                {
                    <div class="project-status-active">
                        Active
                    </div>
                }
                @if (project.IsCompleted)
                {
                    <div class="project-status-completed">
                        Completed
                    </div>
                }

                <img class="card-img-top" src="@project.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@project.Title</h5><h6 style="text-align: center;"><span class="badge badge-info">@project.Participants participants</span></h6>
                    <hr />
                    <p>
                        <img class="project-icons-list" src="/question-mark-line.png" />
                        <span class="card-text">@project.Description.Substring(0, Math.Min(project.Description.Length, 200))...</span>
                    </p>
                    <p>
                        <img class="project-icons-list" src="/location-info.png" />
                        <span class="card-text">@project.City</span>
                    </p>
                    <p>
                        <img class="project-icons-list" src="/clock-timing.png" />
                        <span class="card-text">@project.StartDate</span>
                    </p>
                    <p class="card-text"><b>Published on:</b> @project.PublishedOn</p>
                    <hr />
                    <div class="col text-center" style="margin-top: 1.25rem">
                        <a class="btn btn-primary" id="detailsButton" asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id">Details</a>
                    </div>
                </div>
            </div>

            @if (count == 2)
            {
            @: </div><br />
        }

            @if (count == 2)
            {
                count = 0;
            }
             else 
            {
                count++;
            }

        }


    }
    @*@{
        var previousPage = Model.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }

        var maxPage = Math.Ceiling((double)Model.TotalProjects / AllProjectsQueryModel.ProjectsPerPage);
    }

